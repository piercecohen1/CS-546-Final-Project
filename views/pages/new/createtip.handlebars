<article class="new-tip">
  <h1>Make a Tip</h1>
  <form action="/tips" method="POST" class="new-tip-form">
    <label>
      Tip Title
      <input type="text" name="title" placeholder="Tip Title" value="{{tip.title}}" class="full-width-input"/>
    </label>
    <label for="tip-body">
      Tip Body
    </label>
    <textarea id="tip-body" name="body" rows="4" placeholder="Tip Content" class="full-width-input">{{tip.body}}</textarea>

    <button type="submit">Create New Tip</button>
  </form>
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
</article>
